<?xml version='1.0' encoding='utf-8'?>
<widget id="com.catapush.messenger" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CatapushMessenger</name>
    <description>
        A sample Catapush Messenger.
    </description>
    <author email="info@catapush.com" href="http://www.catapush.com">
        Catapush Team
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-navigation href="*://*.catapush.com/*" />
    <allow-navigation href="*://*.catapush.rocks/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />
    <engine name="windows" spec="~4.3.2" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <!--<preference name="iosPersistentFileLocation" value="Library" />-->
</widget>
